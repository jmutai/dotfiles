#client.focused    $black $black     $darkwhite
#client.unfocused  $black $black     $lightgray
#client.urgent     $black $darkred   $lightgray
#client.background $black

exec_always feh --bg-scale ~/Pictures/linux_archlinux_os_blue_black_logo_30861_1920x1080.jpg
#exec_always --no-startup-id nm-applet

# Transparent background
exec_always compton
exec chromium

# Bind chromium  to Workspace 2
# Check class by : xprop
assign [class="Firefox"] $ws1
assign [class="chromium"] $ws2
assign [class="Atom"] $ws3
assign [class="Foxit Reader"] $ws3
assign [class="Thunar"] $ws4






# Custom Keybinds

# Press $mod+o followed by either f, t, Esc or Return to launch firefox,
# thunderbird or return to the default mode, respectively.
set $mode_launcher Launcher
set $mode_launcher 
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec firefox
    bindsym t exec thunderbird

    bindsym Esc mode "default"
    bindsym Return mode "default"
}
